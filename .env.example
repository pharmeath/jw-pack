# ============================================================================
# Development Environment Configuration
# ============================================================================
# NODE_ENV=development 환경에서 로드됨
# 로컬 오버라이드: .env.local (Git 제외)
# ============================================================================

# Application Environment
NODE_ENV=development

# Application Info
NEXT_PUBLIC_APP_NAME=my-app
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_BUILD_ID=dev

# Framework Version
NEXT_PUBLIC_FRAMEWORK_VERSION=fv1

# Internationalization
NEXT_PUBLIC_LANG=ko
NEXT_PUBLIC_I18N_PROVIDER=external

# API Configuration
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_DATA_MODE=file
# API 버전은 서버 전용 (NEXT_PUBLIC_ 금지 — 브라우저 노출 방지)
# 버전 매핑은 Gateway rewrites 또는 리버스 프록시에서 처리
API_URL=http://localhost:8089/api/v1

# Chat Server Configuration (jw-zulip)
# NEXT_PUBLIC_* 변수는 클라이언트에 인라인됨 — 프록시 경로만 허용
# 실제 WAS 주소는 Gateway rewrites에서 처리
NEXT_PUBLIC_CONSULTATION_API_URL=/api/consultation
# 서버 전용 (Gateway rewrites용)
CONSULTATION_API_URL=http://127.0.0.1:8001/api

# Zulip API Configuration (jw-zulip)
NEXT_PUBLIC_ZULIP_API_URL=/api/zulip
# 서버 전용 (Gateway rewrites용)
ZULIP_API_URL=http://127.0.0.1:8001/api/zulip

# Authentication
# AUTH_PROVIDER: local | keycloak | oauth2
# - local: 내장 인증 (httpClient 기반, DATA_MODE=file 시 로컬 JSON 응답)
NEXT_PUBLIC_AUTH_PROVIDER=local
NEXT_PUBLIC_AUTH_LOCAL_LOGIN_ENABLED=false
NEXT_PUBLIC_UNAUTHORIZED_REDIRECT=/auth/login
# Auth Endpoints (프록시 경로만 — 버전/WAS 주소 브라우저 노출 금지)
NEXT_PUBLIC_AUTH_LOGIN_ENDPOINT=/auth/login
NEXT_PUBLIC_AUTH_LOGOUT_ENDPOINT=/auth/logout
NEXT_PUBLIC_AUTH_REFRESH_ENDPOINT=/auth/refresh
NEXT_PUBLIC_AUTH_CSRF_ENDPOINT=/auth/csrf
NEXT_PUBLIC_AUTH_USER_ENDPOINT=/auth/user

# API Endpoints (프록시 경로만 — 버전/WAS 주소 브라우저 노출 금지)
NEXT_PUBLIC_API_ENDPOINT_FRAMEWORK_INIT=/framework/init
NEXT_PUBLIC_API_ENDPOINT_AUTH_CHANGE_PASSWORD=/auth/password
NEXT_PUBLIC_API_ENDPOINT_AUTH_RESET_PASSWORD=/auth/password/reset
NEXT_PUBLIC_API_ENDPOINT_AUTH_CONFIRM_RESET=/auth/password/confirm

NEXT_PUBLIC_API_ENDPOINT_USERS_LIST=/users
NEXT_PUBLIC_API_ENDPOINT_USERS_GET=/users/:id
NEXT_PUBLIC_API_ENDPOINT_USERS_CREATE=/users
NEXT_PUBLIC_API_ENDPOINT_USERS_UPDATE=/users/:id
NEXT_PUBLIC_API_ENDPOINT_USERS_DELETE=/users/:id
NEXT_PUBLIC_API_ENDPOINT_USERS_SEARCH=/users/search
NEXT_PUBLIC_API_ENDPOINT_USERS_PERMISSIONS=/users/:id/permissions
NEXT_PUBLIC_API_ENDPOINT_USERS_ROLES=/users/:id/roles

NEXT_PUBLIC_API_ENDPOINT_FILES_UPLOAD=/files/upload
NEXT_PUBLIC_API_ENDPOINT_FILES_DOWNLOAD=/files/:id/download
NEXT_PUBLIC_API_ENDPOINT_FILES_DELETE=/files/:id
NEXT_PUBLIC_API_ENDPOINT_FILES_THUMBNAIL=/files/:id/thumbnail?size={size}

NEXT_PUBLIC_API_ENDPOINT_SYSTEM_CODES_LIST=/system-codes
NEXT_PUBLIC_API_ENDPOINT_SYSTEM_CODES_GET=/system-codes/:id
NEXT_PUBLIC_API_ENDPOINT_SYSTEM_CODES_CREATE=/system-codes
NEXT_PUBLIC_API_ENDPOINT_SYSTEM_CODES_UPDATE=/system-codes/:id
NEXT_PUBLIC_API_ENDPOINT_SYSTEM_CODES_DELETE=/system-codes/:id

NEXT_PUBLIC_API_ENDPOINT_COMMON_CODES_ALL=/common-codes
NEXT_PUBLIC_API_ENDPOINT_COMMON_CODES_GROUP=/common-codes/{groupId}
NEXT_PUBLIC_API_ENDPOINT_COMMON_CODES_SEARCH=/common-codes/search

NEXT_PUBLIC_API_ENDPOINT_NOTIFICATIONS_LIST=/notifications
NEXT_PUBLIC_API_ENDPOINT_NOTIFICATIONS_GET=/notifications/:id
NEXT_PUBLIC_API_ENDPOINT_NOTIFICATIONS_READ=/notifications/:id/read
NEXT_PUBLIC_API_ENDPOINT_NOTIFICATIONS_READ_ALL=/notifications/read-all
NEXT_PUBLIC_API_ENDPOINT_NOTIFICATIONS_DELETE=/notifications/:id
NEXT_PUBLIC_API_ENDPOINT_NOTIFICATIONS_UNREAD_COUNT=/notifications/unread-count

NEXT_PUBLIC_API_ENDPOINT_SETTINGS_GET=/settings
NEXT_PUBLIC_API_ENDPOINT_SETTINGS_UPDATE=/settings
NEXT_PUBLIC_API_ENDPOINT_SETTINGS_SYSTEM=/settings/system

NEXT_PUBLIC_API_ENDPOINT_AUDIT_LIST=/audit
NEXT_PUBLIC_API_ENDPOINT_AUDIT_GET=/audit/:id
NEXT_PUBLIC_API_ENDPOINT_AUDIT_SEARCH=/audit/search

# Auth Transport
NEXT_PUBLIC_AUTH_REFRESH_HEADER_NAME=X-Refresh-Token
NEXT_PUBLIC_AUTH_CSRF_ENABLED=true
NEXT_PUBLIC_AUTH_CSRF_HEADER_NAME=X-CSRF-TOKEN
NEXT_PUBLIC_AUTH_CSRF_COOKIE_NAME=XSRF-TOKEN

# Monitoring & Analytics (disabled in development)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GA_TRACKING_ID=

# Feature Flags (development)
NEXT_PUBLIC_FF_NEW_LAYOUT=false
NEXT_PUBLIC_FF_BETA=true
NEXT_PUBLIC_FF_DEBUG_PANEL=true

# ============================================================================
# Router Configuration
# ============================================================================
# Next.js Router 타입
# - 'page': Pages Router (기본값, 권장)
# - 'app': App Router
NEXT_PUBLIC_ROUTER_MODE=page

# 라우팅 방식
# - 'registry': 동적 라우팅 (개발 권장)
# - 'codegen': 정적 라우팅 (빌드 시)
NEXT_PUBLIC_ROUTE_MODE=registry

# ============================================================================
# Layout Configuration (ResponsiveExtentionLayout)
# ============================================================================

# --- 사이드바 설정 ---
# 사이드바 모드
# - 'default': 일반 사이드바 (전체 메뉴 표시)
# - 'rail': Rail(아이콘바) + Drawer(하위 메뉴) 조합
NEXT_PUBLIC_SIDEBAR_MODE=default

# 사이드바 너비 (px, default 모드)
NEXT_PUBLIC_SIDEBAR_WIDTH=150

# 사이드바 표시 브레이크포인트 (sm/md/lg/xl)
NEXT_PUBLIC_SIDEBAR_BREAKPOINT=md

# 모바일 햄버거 메뉴 버튼 활성화
NEXT_PUBLIC_SHOW_MOBILE_MENU_BUTTON=true

# 버튼 위치 (left | right)
NEXT_PUBLIC_MOBILE_MENU_BUTTON_POSITION=left

# 모바일 뒤로가기 버튼 표시 (true | false)
# - true: 서브페이지에서 뒤로가기 버튼 + 현재 메뉴명 표시
# - false: 항상 기본 헤더(로고+타이틀) 표시
NEXT_PUBLIC_SHOW_MOBILE_BACK_BUTTON=false

# --- Rail 모드 설정 (sidebarMode='rail'에서 사용) ---
# Rail(아이콘바) 너비 (px)
NEXT_PUBLIC_RAIL_WIDTH=72

# Rail Drawer(하위 메뉴 패널) 너비 (px)
NEXT_PUBLIC_RAIL_DRAWER_WIDTH=240

# --- 헤더 설정 ---
# 헤더 높이 (px)
NEXT_PUBLIC_HEADER_HEIGHT=60

# 모바일에서 스크롤 시 헤더 숨김
NEXT_PUBLIC_HIDE_HEADER_ON_SCROLL=true

# --- 상단 네비게이션 (TopNav) 설정 ---
# 상단 네비게이션 표시 조건
# - 'always': 항상 표시
# - 'desktop': 데스크탑에서만 표시
# - 'desktop-tablet': 데스크탑/태블릿에서만 표시
# - 'never': 표시 안 함
NEXT_PUBLIC_SHOW_TOP_NAV_ON=always

# 상단 네비게이션 높이 (px)
NEXT_PUBLIC_TOP_NAV_HEIGHT=48

# 상단 네비게이션 모드
# - 'link': 링크 기반 네비게이션 (클릭 시 페이지 이동)
# - 'swipeable': 스와이프 가능한 탭 (좌우 스와이프로 컨텐츠 전환)
NEXT_PUBLIC_TOP_NAV_MODE=link

# --- 하단 네비게이션 (BottomNav) 설정 ---
# 하단 네비게이션 표시 조건
# - 'mobile': 모바일에서만 표시
# - 'mobile-tablet': 모바일/태블릿에서 표시
# - 'always': 항상 표시
# - 'never': 표시 안 함
NEXT_PUBLIC_SHOW_BOTTOM_NAV_ON=mobile

# 하단 네비게이션 높이 (px)
NEXT_PUBLIC_BOTTOM_NAV_HEIGHT=60

# --- 푸터 설정 ---
# 푸터 표시 여부
NEXT_PUBLIC_SHOW_FOOTER=true

# 모바일에서 푸터 표시 여부
NEXT_PUBLIC_SHOW_FOOTER_ON_MOBILE=false

# --- 개발 옵션 ---
# 개발용 상태바 표시 (레이아웃 디버깅용)
NEXT_PUBLIC_SHOW_DEV_STATUS=false

# ============================================================================
# LLM Configuration (Server-side only)
# ============================================================================
LLM_BASE_URL=
LLM_API_KEY=
LLM_MODEL=gpt-4o-mini

# Anthropic (Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ESLint
ESLINT_USE_FLAT_CONFIG=true
